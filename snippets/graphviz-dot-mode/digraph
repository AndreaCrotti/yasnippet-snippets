# -*- mode: snippet -*-
# name: Digraph template
# group: init
# key: digraph
# --
digraph ${1:G} {
	splines=true;

	// Nodes
	${2:shortName} [label="${3:$2}", shape=square];
	$0
	// Connections
	${4:F1} -> $2$[label="${5:connection_label}"]
	
	// Ranks
	{ rank=${6:$$(yas-choose-value '("same" "min" "max"))}; $2; };
}
